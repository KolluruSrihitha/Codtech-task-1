#include <stdio.h>
#include <string.h>

#define MAX_QUESTIONS 5
#define MAX_OPTIONS 4

typedef struct {
    char question[100];
    char options[MAX_OPTIONS][50];
    int correct_answer;
} Question;

void print_question(Question q) {
    printf("%s\n", q.question);
    for (int i = 0; i < MAX_OPTIONS; i++) {
        printf("%d. %s\n", i + 1, q.options[i]);
    }
}

int get_user_answer() {
    int choice;
    printf("Enter your choice (1-%d): ", MAX_OPTIONS);
    scanf("%d", &choice);
    return choice;
}

int main() {
    Question questions[MAX_QUESTIONS] = {
        {"What is the capital of France?", {"Paris", "London", "Berlin", "Madrid"}, 0},
        {"Which planet is closest to the Sun?", {"Mars", "Venus", "Mercury", "Earth"}, 2},
        // Add more questions here
    };

    int score = 0;

    for (int i = 0; i < MAX_QUESTIONS; i++) {
        print_question(questions[i]);
        int user_answer = get_user_answer();
        if (user_answer - 1 == questions[i].correct_answer) {
            printf("Correct!\n");
            score++;
        } else {
            printf("Incorrect. The correct answer is %d: %s\n", questions[i].correct_answer + 1, questions[i].options[questions[i].correct_answer]);
        }
    }

    printf("\nYour score is: %d/%d\n", score, MAX_QUESTIONS);

    return 0;
}

